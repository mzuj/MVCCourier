@model MVCCourier.Models.PackageModel



<h2>Edytuj paczkę</h2>

@using (Html.BeginForm(new { Model.Adress, Model.Category, Model.Courier, Model.DateDelivered, Model.DueDate, Model.Id, Model.IsDelivered, Model.Price }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>PackageModel</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.Category)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Category)
            @Html.ValidationMessageFor(model => model.Category)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Adress)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Adress)
            @Html.ValidationMessageFor(model => model.Adress)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DueDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DueDate)
            @Html.ValidationMessageFor(model => model.DueDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DateDelivered)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DateDelivered)
            @Html.ValidationMessageFor(model => model.DateDelivered)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Price)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Price)
            @Html.ValidationMessageFor(model => model.Price)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.IsDelivered)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.IsDelivered)
            @Html.ValidationMessageFor(model => model.IsDelivered)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Courier)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Courier)
            @Html.ValidationMessageFor(model => model.Courier)
        </div>

        <p>
            <input type="submit" value="Zapisz zmiany" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Powróć do listy", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
